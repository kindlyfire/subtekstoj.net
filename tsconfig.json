{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./dist/",
        "rootDir": "./app/",
        "strict": true,
        "noImplicitAny": false,
        "types": ["node"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "dist", "gulpfile.js", "webapp"]
}
